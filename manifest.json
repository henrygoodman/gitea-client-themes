{
  "manifest_version": 3,
  "name": "Custom CSS Theme",
  "version": "1.0",
  "description": "Applies a custom CSS theme to specific domains.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["theme.css"],
      "matches": ["https://gitea.com/*"]
    }
  ]
}
